@model ComputerStore.ViewModel.inventoryVM
@using ComputerStore.Models

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="~/css/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="~/css/js/ie-emulation-modes-warning.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="~/css/js/html5shiv.min.js"></script>
      <script src="~/css/js/respond.min.js"></script>
    <![endif]-->
    <!-- Custom styles for this template -->
    <link href="~/css/jumbotron.css" rel="stylesheet">
    <title>דף חיפוש מוצרים</title>
    <style type="text/css">
        .form-style-3 {
            max-width: 450px;
            right: 20px;
        }

            .form-style-3 label {
                display: block;
                margin-bottom: 10px;
            }

                .form-style-3 label > span {
                    float: right;
                    width: 100px;
                    color: #000000;
                    font-weight: bold;
                    font-size: 13px;
                    text-shadow: 1px 1px 1px #fff;
                }

            .form-style-3 fieldset {
                border-radius: 10px;
                -webkit-border-radius: 10px;
                -moz-border-radius: 10px;
                margin: 0px 0px 10px 0px;
                border: 1px solid #A70909;
                padding: 20px;
                background: #FFF4F4;
                box-shadow: inset 0px 0px 15px #FFE5E5;
                -moz-box-shadow: inset 0px 0px 15px #FFE5E5;
                -webkit-box-shadow: inset 0px 0px 15px #FFE5E5;
            }

                .form-style-3 fieldset legend {
                    color: #000000;
                    border-top: 1px solid #ff0000;
                    border-left: 1px solid #ff0000;
                    border-right: 1px solid #ff0000;
                    border-radius: 5px 5px 0px 0px;
                    -webkit-border-radius: 5px 5px 0px 0px;
                    -moz-border-radius: 5px 5px 0px 0px;
                    background: #ffd800;
                    padding: 0px 8px 3px 8px;
                    box-shadow: -0px -1px 2px #ffd800;
                    -moz-box-shadow: -0px -1px 2px #ffd800;
                    -webkit-box-shadow: -0px -1px 2px #ffd800;
                    font-weight: normal;
                    font-size: 12px;
                }


        .left-side {
            position: absolute;
            width: 50%;
            left: -100px;
        }


        .required {
            color: red;
            font-weight: normal;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header navbar-right">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{ if (Session["Admin"] != null)
                    {
                        <span class="navbar-brand navbar-right" style="color:white">@Html.ActionLink("דף ניהול", "Index", "Admin")</span>
                        <span class="navbar-brand navbar-right" style="color:white">@Html.ActionLink("הוספת מוצר", "InventoryPage", "Admin")</span>
                        <span class="navbar-brand navbar-right" style="color:white">@Html.ActionLink("שינוי מוצרים", "ViewItem", "Admin")</span>
                        <span class="navbar-brand navbar-right" style="color:white">@Html.ActionLink("הזמנות", "ViewOrders", "Admin")</span>
                        <span class="navbar-brand navbar-right" style="color:white">@Html.ActionLink("דף הבית", "home")</span>
                    }
                    else
                    {
                        <span class="navbar-brand navbar-right" style="color:white">@Html.ActionLink("כניסה למנהל", "Login", "Admin")</span>
                        <span class="navbar-brand navbar-right" style="color:white">@Html.ActionLink("דף הבית", "home")</span>
                    }
                }
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-left">

                @{ if (Session["Admin"] != null)
                    {

                        <span class="navbar-brand" style="color:white">  @Session["Admin"]</span>
                        <span class="navbar-brand" style="color:white">@Html.ActionLink("התנתק", "Logout", "Admin")</span>
                    }
                    else
                    {
                        <span class="navbar-brand" style="color:white">  שלום אורח</span>
                    }
                }

            </div><!--/.navbar-collapse -->
        </div>
    </nav>
    <div class="jumbotron" style="text-align:right">
        <div class="container">
            <h1>חיפוש</h1>
            <div class="col-xs-4 col-sm-6">
                <div class="form-style-3" style="text-align:right">
                    <div class="col-lg-12">
                        <form action="HandleSearchItem" method="post">
                            <fieldset>
                                <legend>חיפוש לפי טווח מחירים</legend>
                                <label for="field2"><span>ממחיר <span class="required">*</span></span><input type="text" class="input-field" name="txtFromPrice" id="txtFromPrice" value="" /></label>
                                <label for="field3"><span>עד מחיר <span class="required">*</span></span><input type="text" class="input-field" name="txtToPrice" id="txtToPrice" value="" /></label>
                                <label><span>&nbsp;</span><input type="submit" value="חפש" /></label>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xs-8 col-sm-6">
                <div class="form-style-3" style="text-align:right">

                    <div class="col-lg-12">
                        <form action="HandleSearchItem" method="post">
                            <fieldset>
                                <legend>חיפוש לפי שם</legend>
                                <label for="field1"><span>שם המוצר: </span><input type="text" class="input-field" name="txtTextForSearch" value="" /></label>
                                <label><span>&nbsp;</span><input type="submit" value="חפש" /></label>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
@{
    if (ViewData["Error"] != null)
    {
        <div class="alert alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <p class="text-right"><strong> שגיאה </strong> @ViewData["Error"]</p>

        </div>
        }
    }
    @Html.Partial("items", Model)




</body>
</html>
